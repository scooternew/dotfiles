set nocompatible

" Support Pathogen (plugin installer)
execute pathogen#infect()

syntax on
filetype plugin indent on

set number
set ruler

set expandtab
set tabstop=2

set cursorline
set cursorcolumn

" Search
set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch

" Color scheme
set t_Co=256
set background=dark
colorscheme gruvbox

